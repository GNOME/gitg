root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.vala]
indent_size = 4
indent_style = tab
insert_final_newline = true
max_line_length = 100

[*.{c,h}]
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 100

[*.css]
indent_size = 2
indent_style = space

[*.{ui,xml,xml.in}]
indent_size = 2
indent_style = space

[*.py]
indent_size = 4
indent_style = space

[*.json]
indent_style = space
indent_size = 4

[meson.build]
indent_size = 2
indent_style = space
